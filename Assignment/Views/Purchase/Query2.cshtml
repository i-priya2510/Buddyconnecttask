

@{
    ViewBag.Title = "Query2";
}

<br />
<br />

<div>
    <h4 class="text-center text-uppercase">Month wise customer report with products</h4>
    <table class="table">
        <tr>
            <th>Month</th>
            <th>Customer Name</th>
            <th>Amount</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("MMMM")- @item.Date.Year</td>
                <td>@item.CustomerName.Name</td>

                <td>@item.Amount.Amount</td>
            </tr>
        }
    </table>
</div>