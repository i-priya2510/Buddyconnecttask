@model IEnumerable<Assignment.Models.ViewModel1>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div>
    <h4 class="text-center text-uppercase">List of purchase order Against Customer</h4>
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Customer Name</th>
                <th>POID</th>
                <th>Product Name</th>
                <th>Price</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerName.Name</td>
                    <td>@item.POID.POID</td>
                    <td>@item.ProductName.Name</td>
                    <td>@item.Price.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>